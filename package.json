{
	"name": "vue-tinybox",
	"version": "2.0.0-alpha.3",
	"description": "A slick, yet tiny lightbox gallery for Vue.js",
	"license": "MIT",
	"keywords": [
		"vue",
		"vuejs",
		"vue.js",
		"lightbox",
		"gallery"
	],
	"homepage": "https://os.karamoff.dev/vue-tinybox",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NickKaramoff/vue-tinybox.git"
	},
	"bugs": {
		"url": "https://github.com/NickKaramoff/vue-tinybox/issues"
	},
	"author": {
		"name": "Nikita Karamov",
		"email": "nick@karamoff.dev",
		"url": "https://karamoff.dev"
	},
	"type": "module",
	"main": "./dist/vue-tinybox.umd.cjs",
	"module": "./dist/vue-tinybox.js",
	"unpkg": "./dist/vue-tinybox.iife.js",
	"jsdelivr": "./dist/vue-tinybox.iife.js",
	"exports": {
		".": {
			"require": "./dist/vue-tinybox.umd.cjs",
			"import": "./dist/vue-tinybox.js"
		},
		"./css": "./src/vue-tinybox.css",
		"./sfc": "./src/tinybox.vue"
	},
	"files": [
		"dist/",
		"src/tinybox.vue"
	],
	"engines": {
		"node": "^14 || ^16 || >=18"
	},
	"scripts": {
		"build": "vite build --emptyOutDir",
		"dev": "vite",
		"fmt": "prettier --write .",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
		"size": "size-limit",
		"pretest": "pnpm run build",
		"test": "pnpm run lint && pnpm run size"
	},
	"peerDependencies": {
		"vue": "^3"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@size-limit/esbuild": "^8.1.2",
		"@size-limit/file": "^8.1.2",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-prettier": "^7.0.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.33.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-plugin-vue": "^9.9.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.3",
		"size-limit": "^8.1.2",
		"vite": "^4.1.1",
		"vue": "^3.2.47"
	},
	"browserslist": "defaults and supports es6-module",
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"size-limit": [
		{
			"path": [
				"dist/vue-tinybox.js"
			],
			"limit": "2 kB",
			"brotli": true
		},
		{
			"path": [
				"dist/vue-tinybox.css"
			],
			"limit": "1 kB",
			"brotli": true
		}
	]
}
