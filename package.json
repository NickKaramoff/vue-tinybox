{
	"name": "vue-tinybox",
	"version": "2.0.0-alpha.2",
	"description": "A slick, yet tiny lightbox gallery for Vue.js",
	"license": "MIT",
	"keywords": [
		"vue",
		"vuejs",
		"vue.js",
		"lightbox",
		"gallery"
	],
	"homepage": "https://os.karamoff.dev/vue-tinybox",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NickKaramoff/vue-tinybox.git"
	},
	"bugs": {
		"url": "https://github.com/NickKaramoff/vue-tinybox/issues"
	},
	"author": {
		"name": "Nikita Karamov",
		"email": "nick@karamoff.dev",
		"url": "https://karamoff.dev"
	},
	"type": "module",
	"main": "./dist/vue-tinybox.umd.cjs",
	"module": "./dist/vue-tinybox.js",
	"unpkg": "./dist/vue-tinybox.iife.js",
	"jsdelivr": "./dist/vue-tinybox.iife.js",
	"exports": {
		".": {
			"require": "./dist/vue-tinybox.umd.cjs",
			"import": "./dist/vue-tinybox.js"
		},
		"./sfc": "src/tinybox.vue"
	},
	"files": [
		"dist/",
		"src/tinybox.vue"
	],
	"scripts": {
		"build": "vite build --emptyOutDir",
		"dev": "vite",
		"fmt": "prettier --write .",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
		"size": "size-limit",
		"pretest": "pnpm run build",
		"test": "pnpm run lint && pnpm run size"
	},
	"peerDependencies": {
		"vue": "^3"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@size-limit/preset-small-lib": "^4.5.2",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/compiler-sfc": "^3.1",
		"@vue/eslint-config-prettier": "^7.0.0",
		"autoprefixer": "^9.8.4",
		"eslint": "^8.33.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-plugin-vue": "^9.9.0",
		"postcss": "^7.0.32",
		"prettier": "^2.8.3",
		"size-limit": "^4.5.2",
		"vite": "^4.1.1",
		"vite-plugin-css-injected-by-js": "^2.4.0",
		"vue": "^3.1",
		"vue-eslint-parser": "^9.1.0"
	},
	"size-limit": [
		{
			"path": "dist/vue-tinybox.iife.js",
			"limit": "3 kB",
			"webpack": false
		},
		{
			"path": "dist/vue-tinybox.js",
			"limit": "3 kB"
		}
	],
	"engines": {
		"node": ">=10"
	}
}
